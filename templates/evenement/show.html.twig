{% extends 'base.html.twig' %}

{% block title %}{{ evenement.titre }}{% endblock %}

{% block body %}
<!-- En-tête de page -->
<div class="container-fluid page-header py-5" style="background-color: #709A41;">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white mb-3 fw-bold">{{ evenement.titre }}</h1>
        <nav aria-label="fil d'Ariane">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#" class="text-white">Accueil</a></li>
                <li class="breadcrumb-item"><a href="#" class="text-white">Événements</a></li>
                <li class="breadcrumb-item active text-white-50" aria-current="page">Détails</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mt-5">
    <!-- Modified Card Structure -->
    <div class="card border-0 shadow-lg">
        <div class="row g-0 min-vh-50">
            <!-- Image/Details Column -->
            <div class="col-md-4 d-flex flex-column" style="background: linear-gradient(rgba(112, 154, 65, 0.9), rgba(112, 154, 65, 0.8)), url('https://via.placeholder.com/400') center/cover;">
                <div class="d-flex flex-column h-100 p-4 text-white">
                    <div class="mb-auto">
                        <h3 class="h5">Détails de l'événement</h3>
                        <hr class="text-white">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-calendar-alt me-2"></i>
                            <div>
                                <small class="d-block">Date de début</small>
                                <strong>{{ evenement.dateDebut ? evenement.dateDebut|date('j F Y') : '' }}</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-calendar-times me-2"></i>
                            <div>
                                <small class="d-block">Date de fin</small>
                                <strong>{{ evenement.dateFin ? evenement.dateFin|date('j F Y') : '' }}</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            <div>
                                <small class="d-block">Lieu</small>
                                <strong>{{ evenement.lieu }}</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-dollar-sign me-2"></i>
                            <div>
                                <small class="d-block">Prix</small>
                                <strong>{{ evenement.prix }} $</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-users me-2"></i>
                            <div>
                                <small class="d-block">Nombre de places</small>
                                <strong>{{ evenement.nombreDePlaces }}</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Description Column -->
            <div class="col-md-8 d-flex flex-column">
                <div class="card-body p-4 d-flex flex-column">
                    <h3 class="h4 mb-4" style="color: #709A41;">À propos de l'événement</h3>
                    <div class="flex-grow-1">
                        <p class="lead text-break" style="white-space: pre-wrap; overflow-wrap: break-word;">
                            {{ evenement.description|nl2br }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Boutons d'action -->
    <div class="d-flex gap-3 mt-4 justify-content-end">
        <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
        <form method="post" action="{{ path('app_evenement_show', {'slug': evenement.slug}) }}">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-ticket-alt me-2"></i>Participer à l'événement
            </button>
        </form>
    </div>
</div>

<!-- Styles -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .breadcrumb-item.active {
        color: #e9ecef !important;
    }
    
    .btn-success {
        transition: all 0.3s ease;
    }
    
    .btn-success:hover {
        background-color: #5d8340 !important;
        border-color: #5d8340 !important;
    }

    /* New CSS Additions */
    .min-vh-50 {
        min-height: 50vh;
    }
    
    .flex-grow-1 {
        flex: 1 1 auto;
    }
    
    .card-body {
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .text-break {
        word-break: break-word;
        overflow-wrap: break-word;
    }
</style>
{% endblock %}