{% extends 'base.html.twig' %}

{% block title %}{{ evenement.titre }}{% endblock %}

{% block body %}
<!-- En-tête de page -->
<div class="container-fluid page-header py-5" style="background-color: #709A41;">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white mb-3 fw-bold">{{ evenement.titre }}</h1>
        <nav aria-label="fil d'Ariane">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#" class="text-white">Accueil</a></li>
                <li class="breadcrumb-item"><a href="#" class="text-white">Événements</a></li>
                <li class="breadcrumb-item active text-white-50" aria-current="page">Détails</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mt-5">
    <!-- Carte de détails -->
    <div class="card border-0 shadow-lg overflow-hidden">
        <div class="row g-0">
            <!-- Image de l'événement -->
            <div class="col-md-4" style="background: linear-gradient(rgba(112, 154, 65, 0.9), rgba(112, 154, 65, 0.8)), url('https://via.placeholder.com/400') center/cover;">
                <div class="d-flex flex-column h-100 p-4 text-white">
                    <div class="mb-auto">
                        <h3 class="h5">Détails de l'événement</h3>
                        <hr class="text-white">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-calendar-alt me-2"></i>
                            <div>
                                <small class="d-block">Date de début</small>
                                <strong>{{ evenement.dateDebut ? evenement.dateDebut|date('j F Y') : '' }}</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-calendar-times me-2"></i>
                            <div>
                                <small class="d-block">Date de fin</small>
                                <strong>{{ evenement.dateFin ? evenement.dateFin|date('j F Y') : '' }}</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            <div>
                                <small class="d-block">Lieu</small>
                                <strong>{{ evenement.lieu }}</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Description -->
            <div class="col-md-8">
                <div class="card-body p-4">
                    <h3 class="h4 mb-4" style="color: #709A41;">À propos de l'événement</h3>
                    <p class="lead">{{ evenement.description }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Boutons d'action -->
    <div class="d-flex gap-3 mt-4 justify-content-end">
        <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
      
</div>

<!-- Styles restants identiques -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .breadcrumb-item.active {
        color: #e9ecef !important;
    }
    
    .btn-success {
        transition: all 0.3s ease;
    }
    
    .btn-success:hover {
        background-color: #5d8340 !important;
        border-color: #5d8340 !important;
    }
</style>
{% endblock %} 