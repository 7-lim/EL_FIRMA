

{% block css %}
<style>
    .form_container {
        width: 500px;
        height: fit-content;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        padding: 50px 40px 20px 40px;
        background-color: #ffffff;
        box-shadow: 0px 106px 42px rgba(0, 0, 0, 0.01),
          0px 59px 36px rgba(0, 0, 0, 0.05), 0px 26px 26px rgba(0, 0, 0, 0.09),
          0px 7px 15px rgba(0, 0, 0, 0.1), 0px 0px 0px rgba(0, 0, 0, 0.1);
        border-radius: 11px;
        font-family: "Inter", sans-serif;
    }

    .title_container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
        color: #212121;
    }

    .subtitle {
        font-size: 0.9rem;
        text-align: center;
        color: #8B8E98;
        max-width: 80%;
    }

    .input_container {
        width: 100%;
        height: fit-content;
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .input_label {
        font-size: 0.85rem;
        color: #8B8E98;
        font-weight: 600;
    }

    .input_field {
        width: 100%;
        padding: 12px 16px;
        border-radius: 7px;
        outline: none;
        border: 1px solid #e5e5e5;
        font-family: inherit;
        font-size: 0.9rem;
        transition: all 0.3s cubic-bezier(0.15, 0.83, 0.66, 1);
    }

    .input_field:focus {
        border-color:rgb(54, 102, 0);
        box-shadow: 0 0 0 3px rgba(17, 93, 252, 0.1);
    }

    textarea.input_field {
        height: 100px;
        resize: vertical;
    }

    .submit_btn {
        width: 100%;
        padding: 12px;
        background: #709A41;
        color: white;
        border: none;
        border-radius: 7px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .submit_btn:hover {
        background:rgb(70, 108, 26);
    }

    /* Date input customization */
    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(0.5);
        cursor: pointer;
    }
</style>
{% endblock %}

{{ form_start(form, {'attr': {'class': 'form_container'}}) }}
    <div class="title_container">
        <p class="title">{{ form_title|default('Create Event') }}</p>
        <span class="subtitle">Fill in the details to organize your event</span>
    </div>

    <div class="input_container">
        {{ form_label(form.titre, 'Event Title', {'label_attr': {'class': 'input_label'}}) }}
        {{ form_widget(form.titre, {'attr': {
            'class': 'input_field',
            'placeholder': 'Enter event title'
        }}) }}
    </div>

    <div class="input_container">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'input_label'}}) }}
        {{ form_widget(form.description, {'attr': {
            'class': 'input_field',
            'placeholder': 'Describe your event',
            'rows': 4
        }}) }}
    </div>

    <div class="input_container">
        {{ form_label(form.dateDebut, 'Start Date', {'label_attr': {'class': 'input_label'}}) }}
        {{ form_widget(form.dateDebut, {'attr': {
            'class': 'input_field'
        }}) }}
    </div>

    <div class="input_container">
        {{ form_label(form.dateFin, 'End Date', {'label_attr': {'class': 'input_label'}}) }}
        {{ form_widget(form.dateFin, {'attr': {
            'class': 'input_field'
        }}) }}
    </div>

    <div class="input_container">
        {{ form_label(form.lieu, 'Location', {'label_attr': {'class': 'input_label'}}) }}
        {{ form_widget(form.lieu, {'attr': {
            'class': 'input_field',
            'placeholder': 'Enter event location'
        }}) }}
    </div>

    <button type="submit" class="submit_btn">{{ button_label|default('Create Event') }}</button>
{{ form_end(form) }}