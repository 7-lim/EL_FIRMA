{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">Nos évenements</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-dark" aria-current="page">évenements</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

    <div class="container-fluid product py-5">
        <div class="container py-5">
            <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="fs-5 fw-medium fst-italic text-primary">Bienvenu!</p>
                <h1 class="display-6">voici nos évenement à venir</h1>
            </div>
            <div class="owl-carousel product-carousel wow fadeInUp" data-wow-delay="0.5s">
                {% for evenement in evenements %}
                <div class="d-block product-item rounded">
                    <img src="{{ asset('img/carousel-1.jpg') }}" alt="{{ evenement.titre }}" class="event-banner">
                    <div class="bg-white shadow-sm text-center p-4 position-relative mt-n5 mx-4">
                        <h4 class="text-primary mb-2">{{ evenement.titre }}</h4>
                        <div class="event-details">
                            <p class="mb-1 text-secondary">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>
                                {{ evenement.dateDebut|date('F j, Y') }}
                                {% if evenement.dateFin %}
                                    - {{ evenement.dateFin|date('F j, Y') }}
                                {% endif %}
                            </p>
                            <p class="mb-2 text-secondary">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                {{ evenement.lieu }}
                            </p>
                            <p class="text-body">{{ evenement.description|slice(0, 100) }}...</p>
                        </div>
                        <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-primary">View Details</a>
                    </div>
                </div>
                {% endfor %}
                {% if evenements|length == 0 %}
                <div class="col-12">
                    <p>No records found</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <a href="{{ path('app_evenement_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
