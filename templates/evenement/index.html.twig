{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
<!-- Page Header Start -->
<div class="container-fluid page-header py-5" style="background-color: #709A41;">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white mb-3 fw-bold">Nos Événements</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#" class="text-white">Accueil</a></li>
                <li class="breadcrumb-item"><a href="#" class="text-white">Pages</a></li>
                <li class="breadcrumb-item active text-white-50" aria-current="page">Événements</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<div class="container my-5">
     <!-- Events Grid -->
    <div class="row g-4">
        {% for evenement in evenements %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm transition-all hover-shadow">
                <div class="position-relative">
                    <img src="{{ asset('img/carousel-1.jpg') }}" class="card-img-top event-image" alt="{{ evenement.titre }}">
                    <div class="card-img-overlay d-flex flex-column p-3">
                        <div class="badge bg-white text-success mb-auto">{{ evenement.dateDebut|date('M d') }}</div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-dark mb-3">{{ evenement.titre }}</h5>
                    
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-calendar-alt text-success me-2"></i>
                        <div>
                            <small class="text-muted">Date</small>
                            <div class="fw-medium">
                                {{ evenement.dateDebut|date('F j, Y') }}
                                {% if evenement.dateFin %}
                                    - {{ evenement.dateFin|date('F j, Y') }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center">
                        <i class="fas fa-map-marker-alt text-success me-2"></i>
                        <div>
                            <small class="text-muted">Lieu</small>
                            <div class="fw-medium">{{ evenement.lieu }}</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0 pb-3">
                    <a href="{{ path('app_evenement_show', {'slug': evenement.slug}) }}" class="btn btn-outline-success w-100">
                        <i class="fas fa-info-circle me-2"></i>Voir Détails
                    </a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info text-center py-4">
                <i class="fas fa-calendar-times fa-2x mb-3 text-success"></i>
                <h4 class="mb-0">Aucun événement programmé pour le moment</h4>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .event-image {
        height: 200px;
        object-fit: cover;
        border-radius: 0.25rem 0.25rem 0 0;
    }
    
    .transition-all {
        transition: all 0.3s ease;
    }
    
    .hover-shadow:hover {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1)!important;
        transform: translateY(-5px);
    }
    
    .card {
        border-radius: 0.5rem;
    }
    
    .btn-outline-success {
        border-color: #709A41;
        color: #709A41;
    }
    
    .btn-outline-success:hover {
        background-color: #709A41;
        color: white;
    }
</style>
{% endblock %}