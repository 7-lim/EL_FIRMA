{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% set active_page = 'evenement' %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-2 text-dark mb-4 animated slideInDown">Événements</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item text-dark" aria-current="page">Événements</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Events Start -->
    <div class="container-fluid product py-5">
        <div class="container py-5">
            <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="fs-5 fw-medium fst-italic text-primary">Bienvenue!</p>
                <h1 class="display-6">Événements à venir</h1>
            </div>
            
            {% if evenements is empty %}
                <div class="text-center wow fadeInUp" data-wow-delay="0.3s">
                    <p class="lead text-muted">Aucun événement prévu pour le moment</p>
                </div>
            {% else %}
                <div class="owl-carousel event-carousel wow fadeInUp" data-wow-delay="0.5s">
                    {% for evenement in evenements %}
                    <div class="event-item">
                        <div class="d-block product-item rounded">
                            <img src="{{ asset('img/carousel-1.jpg') }}" alt="{{ evenement.titre }}" class="event-banner">
                            <div class="bg-white shadow-sm text-center p-4 position-relative mt-n5 mx-4">
                                <h4 class="text-primary mb-2">{{ evenement.titre }}</h4>
                                <div class="event-details">
                                    <p class="mb-1 text-secondary">
                                        <i class="fas fa-calendar-alt text-primary me-2"></i>
                                        {{ evenement.dateDebut|date('d/m/Y') }}
                                        {% if evenement.dateFin %}
                                            - {{ evenement.dateFin|date('d/m/Y') }}
                                        {% endif %}
                                    </p>
                                    <p class="mb-2 text-secondary">
                                        <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                        {{ evenement.lieu }}
                                    </p>
                                    <p class="text-body">{{ evenement.description|slice(0, 100) }}...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    <!-- Events End -->

    <div class="text-center mt-4">
        <a href="{{ path('app_evenement_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Créer un nouvel événement
        </a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            $('.event-carousel').owlCarousel({
                loop: false,
                margin: 20,
                nav: true,
                dots: false,
                autoplay: true,
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
                        items: 2
                    },
                    1000: {
                        items: 3
                    }
                }
            });
        });
    </script>
{% endblock %}