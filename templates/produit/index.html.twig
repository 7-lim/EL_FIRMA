{% block body %}
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">El Firma magasin</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-dark" aria-current="page">Store</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Fruits Shop Start -->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        
        <h1 class="mb-4"></h1>
        <div class="row g-4">
        
            <div class="col-lg-12">
            
                <div class="row g-4">
                
                    <div class="col-xl-3">
                        {{ form_start(searchform, { 'attr': {'class': 'search-form bg-light p-4 rounded shadow-sm'} }) }}
                            <div class="mb-3">
                                {{ form_row(searchform.q, { 'attr': {'class': 'form-control', 'placeholder': 'Recherche...'} }) }}
                            </div>
                            <div class="mb-3">
                                <h4>Catégories</h4>
                                <div class="form-check">
                                    {% for categorie in searchform.categories %}
                                        <div class="form-check">
                                            {{ form_widget(categorie, { 'attr': {'class': 'form-check-input'} }) }}
                                            {{ form_label(categorie, null, { 'attr': {'class': 'form-check-label'} }) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <h4>Prix</h4>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(searchform.min, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(searchform.max, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-success w-100">Filtrer</button>
                        {{ form_end(searchform) }}
                        
                    </div>
                    <div class="col-xl-9">
                        <div class="row g-4 justify-content-center">
                            {% for produit in produits %}
                                <div class="col-md-6 col-lg-6 col-xl-4">
                                    <div class="rounded position-relative fruite-item shadow">
                                        <div class="fruite-img">
                                            {#<img src="{{ produit.image starts with 'http' ? produit.image : asset(produit.image) }}" class="img-fluid w-100 rounded-top" alt="Product Image">#}
                                            <img src="{{ produit.Image ? asset(produit.Image) : 'path/to/default/image.jpg' }}" alt="{{ produit.NomProduit }}" class="img-fluid w-100 rounded-top">
                                        </div>
                                        <div class="p-4 border border-success border-top-0 rounded-bottom bg-light-green">
                                            <h4 class="text-success">{{ produit.NomProduit }}</h4>
                                            <p class="text-dark">{{ produit.Description|slice(0, 50) }}...</p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0">${{ produit.Prix }}</p>
                                                <div class="d-flex gap-1">
                                                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn border border-success rounded-pill px-3 text-success">
                                                        <i class="fa fa-info-circle me-2 text-success"></i> Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-12">
                                    <div class="alert alert-warning">No products found</div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="mt-4 d-flex justify-content-center">
                            {{ knp_pagination_render(produits) }}
                        </div>
                    </div>
                </div>
