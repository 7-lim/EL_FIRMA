  /* Added CSS for pagination */
  .numbered-pagination a:not(:last-child) {
      margin-right: 5px; /* Adjust spacing as needed */
  }
  .numbered-pagination a:not(:last-child::after) {
      content: "-";
      margin-left: 5px; /* Adjust spacing as needed */
  }
