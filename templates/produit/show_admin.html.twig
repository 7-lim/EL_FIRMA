{% extends 'base.html.twig' %}

{% block body %}
<!-- En-tête de page -->
<div class="container-fluid page-header py-5" style="background-color: #709A41;">
    <div class="container text-center py-5">
        <h1 class="display-4 text-white mb-3 fw-bold">{{ produit.NomProduit }}</h1>
        <nav aria-label="fil d'Ariane">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#" class="text-white">Accueil</a></li>
                <li class="breadcrumb-item"><a href="#" class="text-white">Produits</a></li>
                <li class="breadcrumb-item active text-white-50" aria-current="page">Détails</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mt-5">
    <!-- Carte de détails -->
    <div class="card border-0 shadow-lg overflow-hidden">
        <div class="row g-0">
            <!-- Image du produit -->
            <div class="col-md-4" style="background: linear-gradient(rgba(112, 154, 65, 0.9), rgba(112, 154, 65, 0.8)), url('{{ produit.Image ? asset(produit.Image) : 'path/to/default/image.jpg' }}') center/cover;">
                <div class="d-flex flex-column h-100 p-4 text-white">
                    <div class="mb-auto">
                        <h3 class="h5">Détails du produit</h3>
                        <hr class="text-white">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-box me-2"></i>
                            <div>
                                <small class="d-block">Quantité</small>
                                <strong>{{ produit.quantite }}</strong>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-dollar-sign me-2"></i>
                            <div>
                                <small class="d-block">Prix</small>
                                <strong>${{ produit.Prix }}</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Description -->
            <div class="col-md-8">
                <div class="card-body p-4">
                    <h3 class="h4 mb-4" style="color: #709A41;">À propos du produit</h3>
                    <p class="lead">{{ produit.Description }}</p>
                </div>
            </div>
        </div>
    </div>


</div>

<!-- Styles restants identiques -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .breadcrumb-item.active {
        color: #e9ecef !important;
    }
    
    .btn-success {
        transition: all 0.3s ease;
    }
    
    .btn-success:hover {
        background-color: #5d8340 !important;
        border-color: #5d8340 !important;
    }
</style>
{% endblock %}
