<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}Dashboard{% endblock %}</title>

    <!-- Custom fonts for this template -->
    <link href="{{ asset('assetsBack/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    {% block css %}
        <link href="{{ asset('assetsBack/css/sb-admin-2.min.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
{% block sidebar %}
    {% if is_granted('ROLE_ADMIN') %}
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('dashboard') }}">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">SB Admin <sup>2</sup></div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Dashboard -->
            <li class="nav-item {% if app.request.attributes.get('_route') == 'dashboard' %}active{% endif %}">
                <a class="nav-link" href="{{ path('dashboard') }}">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <!-- Gestion des Terrains -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTerrains"
                   aria-expanded="false" aria-controls="collapseTerrains">
                    <i class="fas fa-fw fa-map"></i>
                    <span>Gestion des Terrains</span>
                </a>
                <div id="collapseTerrains" class="collapse {% if app.request.attributes.get('_route') in ['terrain_list', 'terrain_new'] %}show{% endif %}">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="{{ path('terrain_list') }}">Total Terrains</a>
                        <a class="collapse-item" href="{{ path('terrain_list') }}">Terrains Available</a>
                        <a class="collapse-item" href="{{ path('terrain_list') }}">Terrains Pending</a>
                        <a class="collapse-item" href="{{ path('terrain_list') }}">Recent Terrains</a>
                    </div>
                </div>
            </li>

            <!-- Gestion des Produits -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseProduits"
                   aria-expanded="false" aria-controls="collapseProduits">
                    <i class="fas fa-box"></i>
                    <span>Gestion des Produits</span>
                </a>
                <div id="collapseProduits" class="collapse {% if app.request.attributes.get('_route') in ['produit_list', 'produit_new'] %}show{% endif %}">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="{{ path('app_produit_index') }}"><i class="fas fa-list"></i> Liste des Produits</a>
                        <a class="collapse-item" href="{{ path('app_produit_new') }}"><i class="fas fa-plus"></i> Ajouter un Produit</a>
                    </div>
                </div>
            </li>

            <!-- Gestion des Événements -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseEvenements"
                   aria-expanded="false" aria-controls="collapseEvenements">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Gestion des Événements</span>
                </a>
                <div id="collapseEvenements" class="collapse {% if app.request.attributes.get('_route') in ['', 'evenement_new'] %}show{% endif %}">
                    <div class="bg-white py-2 collapse-inner rounded">
                    </div>
                </div>
            </li>

            <!-- Gestion des Utilisateurs -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUsers"
                   aria-expanded="false" aria-controls="collapseUsers">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Gestion des Utilisateurs</span>
                </a>
                <div id="collapseUsers" class="collapse {% if app.request.attributes.get('_route') in ['user_list', 'user_new'] %}show{% endif %}">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="{{ path('app_utilisateur_index') }}"><i class="fas fa-list"></i> Liste des Utilisateurs</a>
                        <a class="collapse-item" href="{{ path('app_register') }}"><i class="fas fa-user-plus"></i> Ajouter un Utilisateur</a>
                    </div>
                </div>
            </li>

            <!-- Gestion des Locations -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLocations"
                   aria-expanded="false" aria-controls="collapseLocations">
                    <i class="fas fa-fw fa-calendar-alt"></i>
                    <span>Gestion des Locations</span>
                </a>
                <div id="collapseLocations" class="collapse {% if app.request.attributes.get('_route') in ['location_index', 'location_new'] %}show{% endif %}">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="{{ path('location_index') }}">Total Locations</a>
                        <a class="collapse-item" href="{{ path('location_index') }}">Locations Actives</a>
                        <a class="collapse-item" href="{{ path('location_index') }}">Locations en Attente</a>
                        <a class="collapse-item" href="{{ path('location_index') }}">Recent Locations</a>
                    </div>
                </div>
            </li>

            <!-- Sidebar Toggler -->
            <hr class="sidebar-divider d-none d-md-block">
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
    {% endif %}
{% endblock %}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                {% block topbar %}
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                        <ul class="navbar-nav ml-auto">
                            <!-- User Information -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                        {% if app.user %}
                                            {{ app.user.nom }} {{ app.user.prenom }} {# Display the user's name #}
                                        {% else %}
                                            Guest
                                        {% endif %}
                                    </span>
                                    <img class="img-profile rounded-circle" src="{{ asset('assetsBack/img/undraw_profile.svg') }}">
                                </a>
                            </li>
                        </ul>
                    </nav>
                {% endblock %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    {% block body %}
                        <h1 class="h3 mb-4 text-gray-800">Dashboard</h1>
                        <div class="row">
                            <!-- Example Card -->
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                    Total Terrains
                                                </div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">50</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-map fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock %}
                </div>
                <!-- End Page Content -->
            </div>
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    {% block js %}
        <script src="{{ asset('assetsBack/vendor/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('assetsBack/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('assetsBack/vendor/jquery-easing/jquery.easing.min.js') }}"></script>
        <script src="{{ asset('assetsBack/js/sb-admin-2.min.js') }}"></script>
    {% endblock %}
</body>

</html>