{% extends 'base.html.twig' %}

{% block title %}Events - Tea House - Tea Shop Website Template{% endblock %}

{% set active_page = 'events' %}  {# Update active page if needed #}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-2 text-dark mb-4 animated slideInDown">Events</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item text-dark" aria-current="page">Events</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Events Start -->
    <div class="container-fluid product py-5">
        <div class="container py-5">
            <div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="fs-5 fw-medium fst-italic text-primary">Upcoming Events</p>
                <h1 class="display-6">Join us for special tea tasting experiences</h1>
            </div>

            {# Carousel Version #}
            <div class="owl-carousel product-carousel wow fadeInUp" data-wow-delay="0.5s">
                {% for event in events %}
                <div class="d-block event-item rounded">
                    <img src="{{ asset('uploads/events/' ~ event.banner) }}" class="event-banner" alt="{{ event.name }}">
                    <div class="bg-white shadow-sm text-center p-4 position-relative mt-n5 mx-4">
                        <h4 class="text-primary">{{ event.name }}</h4>
                        <div class="event-details">
                            <p class="mb-1"><i class="fa fa-calendar text-primary me-2"></i>{{ event.date|date('F j, Y') }}</p>
                            <p class="mb-1"><i class="fa fa-map-marker text-primary me-2"></i>{{ event.location }}</p>
                            <p class="text-body mt-2">{{ event.description }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            {# Grid Layout Version (alternative) #}
            {# <div class="row g-4 wow fadeInUp" data-wow-delay="0.3s">
                {% for event in events %}
                <div class="col-md-6 col-lg-4">
                    <div class="event-item rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="{{ asset('uploads/events/' ~ event.banner) }}" alt="{{ event.name }}">
                            <div class="event-overlay">
                                <small class="text-white"><i class="fa fa-calendar me-2"></i>{{ event.date|date('M d, Y') }}</small>
                            </div>
                        </div>
                        <div class="p-4">
                            <h5 class="text-primary mb-3">{{ event.name }}</h5>
                            <p><i class="fa fa-map-marker text-primary me-2"></i>{{ event.location }}</p>
                            <p class="text-body mb-0">{{ event.shortDescription }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div> #}
        </div>
    </div>
    <!-- Events End -->
{% endblock %}