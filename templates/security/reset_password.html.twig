{% block body %}
<div class="container">
    <div class="reset-password-section">
        <h1>Réinitialiser votre mot de passe</h1>
        <p>Entrez un nouveau mot de passe sécurisé.</p>

        <form method="post">
            <label for="password">Nouveau mot de passe</label>
            <input type="password" id="password" name="password" required>
            <button type="submit" class="btn">Réinitialiser</button>
        </form>

        <a href="{{ path('app_register') }}" class="back-to-login">Retour à la connexion</a>
    </div>
</div>
{% endblock %}
<style>

body {
    background-image: url("{{ asset('img/login.png') }}");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #f0f8f0; /* Light green background */
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
}

/* Container Styling */
.container {
    width: 100%;
    max-width: 400px;
    background: #ffffff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    position: relative;
}

/* Section Title */
.reset-password-section h1 {
    font-size: 24px;
    font-weight: bold;
    color: #2e7d32;
    margin-bottom: 10px;
}

.reset-password-section p {
    color: #555;
    font-size: 14px;
    margin-bottom: 20px;
}

/* Form Styling */
form {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

form label {
    font-weight: bold;
    text-align: left;
    display: block;
    color: #333;
}

form input {
    outline: none;
    border: 1px solid #ccc;
    padding: 10px;
    font-size: 16px;
    border-radius: 8px;
    background: #f9f9f9;
    width: 100%;
}

form input:focus {
    border-color: #2e7d32;
}

/* Submit Button */
.btn {
    background: #2e7d32;
    color: white;
    padding: 10px;
    font-size: 16px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: bold;
}

.btn:hover {
    background: #256029;
}

/* Back to Login */
.back-to-login {
    display: inline-block;
    margin-top: 15px;
    color: #2e7d32;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.3s;
}

.back-to-login:hover {
    color: #1b5e20;
}

</style>