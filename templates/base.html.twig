<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Tea House{% endblock %}</title>

        {% block css %}
        <!-- Google Web Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet">

        <!-- Icon Fonts -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

        <!-- Libraries Stylesheet -->
        <link href="{{ asset('lib/animate/animate.min.css') }}" rel="stylesheet">
        <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">

        <!-- Bootstrap & Custom Styles -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        {% endblock %}
    </head>

    <body class="bg-light">
        <!-- Spinner -->
        <div id="spinner" class="show bg-white position-fixed w-100 vh-100 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
        </div>

        <!-- Navbar -->
        <div class="container-fluid bg-white sticky-top shadow-sm">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light py-3">
                    <a href="{{ path('home') }}" class="navbar-brand">
                        <img class="img-fluid" src="{{ asset('img/logo.png') }}" alt="Logo" width="150">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item"><a href="{{ path('home') }}" class="nav-link {% if app.request.get('_route') == 'home' %}active{% endif %}">Home</a></li>
                            <li class="nav-item"><a href="{{ path('about') }}" class="nav-link {% if app.request.get('_route') == 'about' %}active{% endif %}">About</a></li>
                            <li class="nav-item"><a href="{{ path('products') }}" class="nav-link {% if app.request.get('_route') == 'products' %}active{% endif %}">Products</a></li>
                            <li class="nav-item"><a href="{{ path('store') }}" class="nav-link {% if app.request.get('_route') == 'store' %}active{% endif %}">Store</a></li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                                <div class="dropdown-menu">
                                    <a href="{{ path('features') }}" class="dropdown-item">Features</a>
                                    <a href="{{ path('blog') }}" class="dropdown-item">Blog</a>
                                    <a href="{{ path('testimonial') }}" class="dropdown-item">Testimonial</a>
                                    <a href="{{ path('404') }}" class="dropdown-item">404 Page</a>
                                </div>
                            </li>
                            <li class="nav-item"><a href="{{ path('contact') }}" class="nav-link {% if app.request.get('_route') == 'contact' %}active{% endif %}">Contact</a></li>
                        </ul>
                        <div class="border-start ps-4 d-none d-lg-block">
                            <button type="button" class="btn btn-sm p-0"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        {% block body %}{% endblock %}

        <!-- Footer -->
        <div class="container-fluid bg-dark footer mt-5 py-5 text-light">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3">
                        <h4 class="text-primary mb-4">Our Office</h4>
                        <p><i class="fa fa-map-marker-alt text-primary me-2"></i>123 Street, New York, USA</p>
                        <p><i class="fa fa-phone-alt text-primary me-2"></i>+012 345 67890</p>
                        <p><i class="fa fa-envelope text-primary me-2"></i>info@example.com</p>
                        <div class="d-flex">
                            <a class="btn btn-outline-light btn-sm me-2 rounded-circle" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-sm me-2 rounded-circle" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-sm me-2 rounded-circle" href="#"><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-sm rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <h4 class="text-primary mb-4">Quick Links</h4>
                        <a class="btn btn-link text-light" href="{{ path('about') }}">About Us</a>
                        <a class="btn btn-link text-light" href="{{ path('contact') }}">Contact Us</a>
                        <a class="btn btn-link text-light" href="{{ path('services') }}">Our Services</a>
                        <a class="btn btn-link text-light" href="{{ path('terms') }}">Terms & Conditions</a>
                    </div>
                    <div class="col-lg-3">
                        <h4 class="text-primary mb-4">Business Hours</h4>
                        <p>Mon-Fri: <strong>9:00 am - 7:00 pm</strong></p>
                        <p>Sat: <strong>9:00 am - 12:00 pm</strong></p>
                        <p>Sun: <strong>Closed</strong></p>
                    </div>
                    <div class="col-lg-3">
                        <h4 class="text-primary mb-4">Newsletter</h4>
                        <input class="form-control bg-dark text-light" type="email" placeholder="Your email">
                        <button class="btn btn-primary w-100 mt-2">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="container-fluid bg-primary text-white text-center py-3">
            <p class="mb-0">&copy; Tea House, All Rights Reserved.</p>
        </div>

        <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

        {% block js %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
