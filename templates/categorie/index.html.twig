{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-success">Liste des Catégories</h2>
        <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
            ➕ Ajouter une Catégorie
        </a>
    </div>

    <ul class="list-group mt-3">
        {% for categorie in categories %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="{{ path('app_categorie_show', { 'id': categorie.id }) }}" class="text-decoration-none">{{ categorie.nomCategorie }}</a>
            </li>
        {% else %}
            <li class="list-group-item text-muted">Aucune catégorie disponible.</li>
        {% endfor %}
    </ul>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(categories) }}
    </div>
</div>
{% endblock %}
