{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-success">{{ categorie.nomCategorie }}</h2>

    <h4 class="mt-4">Produits de cette catégorie</h4>
    <ul class="list-group">
        {% for produit in produits %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ produit.nomProduit }}
                <span class="badge badge-success">{{ produit.prix|number_format(2, ',', ' ') }} €</span>
            </li>
        {% else %}
            <li class="list-group-item text-muted">Aucun produit disponible.</li>
        {% endfor %}
    </ul>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(produits) }}
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">⬅ Retour aux catégories</a>
    </div>
</div>
{% endblock %}
