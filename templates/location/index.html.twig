{% extends 'base.html.twig' %}

{% block title %}üìç Liste des Locations{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">üìç Liste des Locations</h1>
    <a href="{{ path('location_new') }}" class="btn btn-primary mb-3">‚ûï Ajouter une Location</a>

    <!-- Search & Filters -->
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" id="search" class="form-control" placeholder="üîé Rechercher par terrain...">
        </div>
        <div class="col-md-2">
            <input type="number" id="minPrix" class="form-control" placeholder="Prix min (‚Ç¨)">
        </div>
        <div class="col-md-2">
            <input type="number" id="maxPrix" class="form-control" placeholder="Prix max (‚Ç¨)">
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th onclick="sortTable('prixLocation')">Prix (‚Ç¨) ‚¨Ü‚¨á</th>
                    <th onclick="sortTable('dateDebut')">Date D√©but ‚¨Ü‚¨á</th>
                    <th onclick="sortTable('dateFin')">Date Fin ‚¨Ü‚¨á</th>
                    <th>Terrain</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="location-list">
                {% for location in locations %}
                    <tr>
                        <td>{{ location.id }}</td>
                        <td>{{ location.prixLocation }} ‚Ç¨</td>
                        <td>{{ location.dateDebut ? location.dateDebut|date('d/m/Y') : '‚ùå Non sp√©cifi√©' }}</td>
                        <td>{{ location.dateFin ? location.dateFin|date('d/m/Y') : '‚ùå Non sp√©cifi√©' }}</td>
                        <td>{{ location.terrain ? location.terrain.localisation : '‚ùå Non sp√©cifi√©' }}</td>
                        <td>
                            <a href="{{ path('location_show', {'id': location.id}) }}" class="btn btn-info btn-sm">üëÄ Voir</a>
                            <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-warning btn-sm">‚úè Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="6" class="text-center text-danger">üö´ Aucune location trouv√©e.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
let sortField = 'prixLocation';
let sortDirection = 'ASC';

function fetchLocations() {
    let terrain = $('#search').val().trim();  // Trim to remove leading/trailing spaces
    let minPrix = $('#minPrix').val() || 0;
    let maxPrix = $('#maxPrix').val() || 1000000;

    $.ajax({
        url: '{{ path("search_locations") }}',
        type: 'GET',
        data: { q: terrain, minPrix, maxPrix, sort: sortField, direction: sortDirection },
        success: function(response) {
            let html = "";
            if (response.success && response.data.length > 0) {
                response.data.forEach(location => {
                    html += `<tr>
                                <td>${location.id}</td>
                                <td>${location.prixLocation} ‚Ç¨</td>
                                <td>${new Date(location.dateDebut).toLocaleDateString('fr-FR')}</td>
                                <td>${new Date(location.dateFin).toLocaleDateString('fr-FR')}</td>
                                <td>${location.terrain ? location.terrain.localisation : 'N/A'}</td>
                                <td>
                                    <a href="/locations/${location.id}" class="btn btn-info btn-sm">üëÄ Voir</a>
                                    <a href="/locations/${location.id}/edit" class="btn btn-warning btn-sm">‚úè Modifier</a>
                                </td>
                            </tr>`;
                });
            } else {
                html = '<tr><td colspan="6" class="text-center text-danger">üö´ Aucune location trouv√©e.</td></tr>';
            }
            $('#location-list').html(html);
        },
        error: function(xhr) {
            console.error("Erreur AJAX:", xhr.responseText);
            alert("‚ùå Erreur lors du chargement des locations.");
        }
    });
}

$('#search, #minPrix, #maxPrix').on('input', fetchLocations);

function sortTable(field) {
    if (sortField === field) {
        sortDirection = (sortDirection === 'ASC') ? 'DESC' : 'ASC';
    } else {
        sortField = field;
        sortDirection = 'ASC';
    }
    fetchLocations();
}
</script>

{% endblock %}
