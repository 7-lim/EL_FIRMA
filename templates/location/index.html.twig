{# templates/location/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Locations{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Liste des Locations</h1>
    <a href="{{ path('location_new') }}" class="btn btn-primary mb-3">Ajouter une Location</a>
    {% if locations|length > 0 %}
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Terrain</th>
                        <th>Date Début</th>
                        <th>Date Fin</th>
                        <th>Prix</th>
                        <th>Paiement Effectué</th>
                        <th>Mode Paiement</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for location in locations %}
                        <tr>
                            <td>{{ location.id }}</td>
                            <td>{{ location.terrain.localisation }}</td>
                            <td>{{ location.DateDebut|date('d/m/Y') }}</td>
                            <td>{{ location.DateFin|date('d/m/Y') }}</td>
                            <td>{{ location.PrixLocation }}</td>
                            <td>{{ location.PaiementEffectue ? 'Oui' : 'Non' }}</td>
                            <td>{{ location.ModePaiement }}</td>
                            <td>{{ location.Statut }}</td>
                            <td>
                                <a href="{{ path('location_show', {'id': location.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <form method="post" action="{{ path('location_delete', {'id': location.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                                    <button class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-center">Aucune location disponible.</p>
    {% endif %}
</div>
{% endblock %}
