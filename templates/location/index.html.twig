{% extends 'base.html.twig' %}

{% block title %}Liste des Locations{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">üìç Liste des Locations</h1>
    <a href="{{ path('location_new') }}" class="btn btn-primary mb-3">‚ûï Ajouter une Location</a>

    <!-- Search & Sorting -->
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" id="search" class="form-control" placeholder="üîé Rechercher par terrain...">
        </div>
    </div>

    {% if locations|length > 0 %}
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th onclick="sortTable('terrain')">Terrain ‚¨Ü‚¨á</th>
                        <th onclick="sortTable('dateDebut')">Date D√©but ‚¨Ü‚¨á</th>
                        <th onclick="sortTable('dateFin')">Date Fin ‚¨Ü‚¨á</th>
                        <th onclick="sortTable('prixLocation')">Prix (‚Ç¨) ‚¨Ü‚¨á</th>
                        <th>Paiement Effectu√©</th>
                        <th>Mode Paiement</th>
                        <th onclick="sortTable('statut')">Statut ‚¨Ü‚¨á</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="location-list">
                    {% for location in locations %}
                        <tr>
                            <td>{{ location.id }}</td>
                            <td>{{ location.terrain ? location.terrain.localisation : 'N/A' }}</td>
                            <td>{{ location.dateDebut|date('d/m/Y') }}</td>
                            <td>{{ location.dateFin|date('d/m/Y') }}</td>
                            <td>{{ location.prixLocation }} ‚Ç¨</td>
                            <td>{{ location.paiementEffectue ? 'Oui' : 'Non' }}</td>
                            <td>{{ location.modePaiement ?: 'N/A' }}</td>
                            <td>{{ location.statut ?: 'En attente' }}</td>
                            <td>
                                <a href="{{ path('location_show', {'id': location.id}) }}" class="btn btn-info btn-sm">üëÄ Voir</a>
                                <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-warning btn-sm">‚úè Modifier</a>
                                <form method="post" action="{{ path('location_delete', {'id': location.id}) }}" style="display:inline-block;" onsubmit="return confirm('√ätes-vous s√ªr ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                                    <button class="btn btn-danger btn-sm">üóë Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-center">üö´ Aucune location disponible.</p>
    {% endif %}
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
let sortField = 'prixLocation';
let sortDirection = 'ASC';

function fetchLocations(query = '') {
    $.ajax({
        url: '/location/search',  // ‚úÖ Make sure this matches your route!
        type: 'GET',
        data: { q: query, sort: sortField, direction: sortDirection },
        success: function(response) {
            let html = "";
            if (response.success && response.data.length > 0) {
                response.data.forEach(location => {
                    html += `<tr>
                                <td>${location.id}</td>
                                <td>${location.terrain ? location.terrain.localisation : 'N/A'}</td>
                                <td>${new Date(location.dateDebut).toLocaleDateString('fr-FR')}</td>
                                <td>${new Date(location.dateFin).toLocaleDateString('fr-FR')}</td>
                                <td>${location.prixLocation} ‚Ç¨</td>
                                <td>${location.paiementEffectue ? 'Oui' : 'Non'}</td>
                                <td>${location.modePaiement || 'N/A'}</td>
                                <td>${location.statut || 'En attente'}</td>
                                <td>
                                    <a href="/locations/${location.id}" class="btn btn-info btn-sm">üëÄ Voir</a>
                                    <a href="/locations/${location.id}/edit" class="btn btn-warning btn-sm">‚úè Modifier</a>
                                    <form method="post" action="/locations/${location.id}/delete" style="display:inline-block;" onsubmit="return confirm('√ätes-vous s√ªr ?');">
                                        <button class="btn btn-danger btn-sm">üóë Supprimer</button>
                                    </form>
                                </td>
                            </tr>`;
                });
            } else {
                html = '<tr><td colspan="9" class="text-center text-danger">üö´ Aucune location trouv√©e.</td></tr>';
            }
            $('#location-list').html(html);
        },
        error: function(xhr, status, error) {
            console.error("Erreur AJAX:", xhr.responseText);
            alert("‚ùå Erreur lors du chargement des locations.");
        }
    });
}

$('#search').on('keyup', function() {
    fetchLocations(this.value);
});

function sortTable(field) {
    if (sortField === field) {
        sortDirection = (sortDirection === 'ASC') ? 'DESC' : 'ASC';
    } else {
        sortField = field;
        sortDirection = 'ASC';
    }
    fetchLocations($('#search').val());
}

</script>

{% endblock %}
