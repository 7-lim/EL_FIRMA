{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ location.DateDebut ? location.DateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ location.DateFin ? location.DateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PrixLocation</th>
                <td>{{ location.PrixLocation }}</td>
            </tr>
            <tr>
                <th>PaiementEffectue</th>
                <td>{{ location.PaiementEffectue ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ModePaiement</th>
                <td>{{ location.ModePaiement }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ location.Statut }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
