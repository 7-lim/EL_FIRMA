{% extends 'base_admin.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Liste des Utilisateurs</h1>
    <a href="{{ path('user_new') }}" class="btn btn-primary mb-3">Ajouter un Utilisateur</a>
    {% if users|length > 0 %}
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Rôles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>{{ user.roles|join(', ') }}</td>
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-center">Aucun utilisateur trouvé.</p>
    {% endif %}
</div>
{% endblock %}
