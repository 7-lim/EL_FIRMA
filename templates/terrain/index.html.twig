{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-success">Liste des Terrains</h2>
            <a href="{{ path('terrain_new') }}" class="btn btn-primary">
                ➕ Ajouter un Terrain
            </a>
        </div>

        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-9">
                        <div class="row g-4 justify-content-center">
                            {% for terrain in terrains %}
                                <div class="col-md-6 col-lg-6 col-xl-4">
                                    <div class="rounded position-relative fruite-item shadow">
                                        <div class="fruite-img">
                                            <!-- ✅ Display Terrain Photo if Available -->
                                            {% if terrain.photo %}
                                                <img src="{{ asset('uploads/terrain_photos/' ~ terrain.photo) }}" 
                                                     alt="{{ terrain.localisation }}" 
                                                     class="img-fluid w-100 rounded-top">
                                            {% else %}
                                                <img src="{{ asset('img/default-terrain.jpg') }}" 
                                                     alt="No Image Available" 
                                                     class="img-fluid w-100 rounded-top">
                                            {% endif %}
                                        </div>
                                        <div class="p-4 border border-success border-top-0 rounded-bottom bg-light-green">
                                            <h4 class="text-success">{{ terrain.localisation }}</h4>
                                            <p class="text-dark">Superficie: {{ terrain.superficie }} m²</p>
                                            <p class="text-dark">Type de sol: {{ terrain.typeSol }}</p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <div class="d-flex gap-1">
                                                    <a href="{{ path('terrain_show', {'id': terrain.id}) }}" class="btn border border-success rounded-pill px-3 text-success">
                                                        <i class="fa fa-info-circle me-2 text-success"></i> Détails
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-12">
                                    <div class="alert alert-warning text-center">Aucun terrain trouvé.</div>
                                </div>
                            {% endfor %}
                        </div>

                        <!-- ✅ Pagination -->
                        <div class="mt-4 d-flex justify-content-center">
                            {{ knp_pagination_render(terrains) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Back to Top Button -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>

{% endblock %}
