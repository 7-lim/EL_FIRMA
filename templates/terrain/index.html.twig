{% extends 'base.html.twig' %}

{% block title %}Liste des Terrains{% endblock %}

{% block body %}

    <div class="container mt-4">
        <h1 class="text-center mb-4">Liste des Terrains</h1>

        <!-- Add Terrain Button -->
        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('terrain_new') }}" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Ajouter un Terrain
            </a>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Localisation</th>
                    <th>Photo</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for terrain in terrains %}
                    <tr>
                        <td>{{ terrain.localisation }}</td>
                        <td class="text-center">
                            {% if terrain.photo %}
                                <img src="{{ asset('uploads/terrains/' ~ terrain.photo) }}" class="img-thumbnail" style="max-width: 100px;">
                            {% else %}
                                <span class="text-muted">Pas d'image</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ path('terrain_show', {'id': terrain.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('terrain_edit', {'id': terrain.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a href="{{ path('terrain_delete', {'id': terrain.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce terrain ?');">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">Aucun terrain trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
