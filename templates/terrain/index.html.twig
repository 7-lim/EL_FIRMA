{% extends 'base.html.twig' %}

{% block title %}Liste des Terrains{% endblock %}

{% block body %}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">Terrains</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-dark" aria-current="page">Terrains</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

    <div class="container">
        <h1 class="text-center">Liste des Terrains</h1>
        <a href="{{ path('terrain_new') }}" class="btn btn-primary mb-3">Ajouter un terrain</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Localisation</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for terrain in terrains %}
                    <tr>
                        <td>{{ terrain.localisation }}</td>
                        <td>
                            {% if terrain.photo %}
                                <img src="{{ asset('uploads/terrains/' ~ terrain.photo) }}" class="img-thumbnail" style="max-width: 100px;">
                            {% else %}
                                Pas d'image
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('terrain_show', {'id': terrain.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
