{% extends 'base_admin.html.twig' %}

{% block title %}üìä Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">üèü Gestion des Terrains & Locations</h1>
    </div>

    <!-- Summary Cards Row -->
    <div class="row">
        <!-- Total Terrains -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Terrains</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ totalTerrains }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-map fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Available Terrains -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Terrains Disponibles</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ terrainsDisponibles }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Terrains -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Terrains en Attente</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ terrainsEnAttente }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Terrains List -->
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">üèü Derniers Terrains Ajout√©s</h6>
            <a href="{{ path('terrain_new') }}" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i> Ajouter un Terrain
            </a>
        </div>
        <div class="card-body">
            {% if terrains|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Localisation</th>
                                <th>Superficie</th>
                                <th>Type de Sol</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for terrain in terrains %}
                                <tr>
                                    <td>{{ terrain.id }}</td>
                                    <td>{{ terrain.localisation }}</td>
                                    <td>{{ terrain.superficie }} m¬≤</td>
                                    <td>{{ terrain.typeSol }}</td>
                                    <td>
                                        <span class="badge {% if terrain.statut == 'disponible' %}bg-success{% elseif terrain.statut == 'en attente' %}bg-warning{% else %}bg-secondary{% endif %}">
                                            {{ terrain.statut|capitalize }}
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ path('terrain_show', {'id': terrain.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        <a href="{{ path('terrain_edit', {'id': terrain.id}) }}" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <form method="post" action="{{ path('terrain_delete', {'id': terrain.id}) }}" style="display:inline-block;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce terrain ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ terrain.id) }}">
                                            <button class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-center">Aucun terrain disponible.</p>
            {% endif %}
        </div>
    </div>

    <!-- Recent Locations List -->
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-secondary">üìç Derni√®res Locations</h6>
            <a href="{{ path('location_new') }}" class="btn btn-sm btn-secondary">
                <i class="fas fa-plus"></i> Ajouter une Location
            </a>
        </div>
        <div class="card-body">
            {% if locations|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Terrain</th>
                                <th>Date D√©but</th>
                                <th>Date Fin</th>
                                <th>Prix (‚Ç¨)</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for location in locations %}
                                <tr>
                                    <td>{{ location.id }}</td>
                                    <td>{{ location.terrain.localisation }}</td>
                                    <td>{{ location.dateDebut|date('d/m/Y') }}</td>
                                    <td>{{ location.dateFin|date('d/m/Y') }}</td>
                                    <td>{{ location.prixLocation }} ‚Ç¨</td>
                                    <td>
                                        <span class="badge {% if location.statut == 'confirm√©e' %}bg-success{% elseif location.statut == 'en attente' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ location.statut|capitalize }}
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ path('location_show', {'id': location.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-center">Aucune location disponible.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
